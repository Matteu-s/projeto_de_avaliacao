<div class="container mt-4">
  <h1>Equipamentos</h1>
  <p style="color: green"><%= notice %></p>
  <%= link_to "Novo Equipamento", new_equipment_path, class: "btn btn-success" %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Número de Série</th>
          <th>Status</th>
          <th>Percente à</th>
          <th>Responsável Atual</th>
          <th>Criado em</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @equipments.each do |equipment| %>
          <tr>
            <td><%= short_id(equipment) %></td>
            <td><%= equipment.name %></td>
            <td><%= equipment.serial_number %></td>
            <td class="text-nowrap"><%= I18n.t("activerecord.attributes.equipment.states.#{equipment.state}") %></td>
            <td class="text-nowrap"><%= name_cnpj(equipment.company) %></td>
            <td><%= equipment.current_responsible %></td>
            <td><%= date_formatted(equipment.created_at) %></td>
            <td class="text-nowrap">
              <%= link_to "Exibir", equipment, class: "btn btn-primary btn-sm" %>
              <%= link_to "Editar", edit_equipment_path(equipment), class: "btn btn-warning btn-sm" %>
              <%= link_to 'Excluir', equipment, data: {turbo_method: :delete, turbo_confirm: 'Você tem certeza?' }, class: "btn btn-danger btn-sm"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @equipments %>
</div>
