<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Esqueceu sua senha?</h1>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "e-mail", label: "e-mail" %>
  </div>

  <div class="actions">
    <%= f.submit "Redefinir Senha", class: "btn btn-secondary w-100 py-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
