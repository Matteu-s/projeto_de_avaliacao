<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <h1 class="h3 mb-3 fw-normal">Mude sua senha</h1>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", label: 'Nova Senha' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", label: 'Confirme sua Senha' %>
  </div>

  <div class="actions">
    <%= f.submit "Alterar minha senha",  class: "btn btn-secondary w-100 py-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
