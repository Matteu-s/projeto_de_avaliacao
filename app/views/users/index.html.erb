<h1>Usuários</h1>
<p style="color: green"><%= notice %></p>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Criado em</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td>
            <%= link_to "Exibir", user, class: "btn btn-primary btn-sm" %>
            <%= link_to "Editar", edit_company_path(user), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Excluir', user, data: {turbo_method: :delete, turbo_confirm: 'Você tem certeza?' }, class: "btn btn-danger btn-sm"%>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Novo usuário", new_user_path, class: "btn btn-success" %>