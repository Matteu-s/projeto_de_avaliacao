<div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 280px; height: 100vh;">
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
    <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
    <span class="fs-4">Avaliação</span>
  </a>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
    <li>
      <%= link_to root_path, class: "nav-link link-body-emphasis #{'active' if params[:controller] == 'home'}", 'aria-current': 'page' do %>
        <svg class="bi pe-none me-2" width="16" height="16">
          <use xlink:href="#home"/>
        </svg>
        Home
      <% end %>
    </li>
    <li>
      <%= link_to users_path, class: "nav-link link-body-emphasis #{'active' if params[:controller] == 'users'}", 'aria-current': 'page' do %>
        <svg class="bi pe-none me-2" width="16" height="16">
          <use xlink:href="#user"/>
        </svg>
        Users
      <% end %>
    </li>
    <li>
      <%= link_to companies_path, class: "nav-link link-body-emphasis #{'active' if params[:controller] == 'companies'}", 'aria-current': 'page' do %>
        <svg class="bi pe-none me-2" width="16" height="16">
          <use xlink:href="#company"/>
        </svg>
        Empresas
      <% end %>
    </li>
    <li>
      <%= link_to equipments_path, class: "nav-link link-body-emphasis #{'active' if params[:controller] == 'equipments'}", 'aria-current': 'page' do %>
        <svg class="bi pe-none me-2" width="16" height="16">
          <use xlink:href="#equipment"/>
        </svg>
        Equipamentos
      <% end %>
    </li>
  </ul>
  <hr>
  <div class="dropdown">
    <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      <strong><%= current_user.name %></strong>
    </a>
    <ul class="dropdown-menu text-small shadow">
      <li><%= link_to 'Editar Usuário', edit_user_path(current_user), class: "dropdown-item"  %></li>
      <li><hr class="dropdown-divider"></li>
      <li><%= link_to 'Sair', destroy_user_session_path, data: {turbo_method: :delete }, class: "dropdown-item" %></li>
    </ul>
  </div>
</div>
